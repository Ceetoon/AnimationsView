<com.ceetoon.animationsview.DisScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.ceetoon.animationsview.DisScrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="这是一个小型的动画框架。可以支持出现的方位,透明度，伸缩，旋转，颜色渐变等各种动画。我在马路边..."
            android:textSize="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@mipmap/test1"
            app:disscrollview_scaleX="true"
            app:disscrollview_scaleY="true"
            app:disscrollview_translation="fromLeft|fromTop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:disscrollview_alpha="true"
            app:disscrollview_fromBg="#ff0000"
            app:disscrollview_toBg="#B8B8B8" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="center"
            android:src="@mipmap/test2"
            app:disscrollview_scaleX="true"
            app:disscrollview_scaleY="true"
            app:disscrollview_translation="fromRight|fromBottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:disscrollview_alpha="true"
            app:disscrollview_fromBg="#ff0000"
            app:disscrollview_toBg="#FF9800" />


    </com.ceetoon.animationsview.DisScrollViewContent>

</com.ceetoon.animationsview.DisScrollView>